/**
 * V2 Extended Data Collector
 * 
 * Standalone data collection for Extended funding rates
 * Features:
 * - 1-hour intervals (like Lighter)
 * - Stores raw rate, rate as percent, and APR
 * - Isolated table (extended_raw_data)
 * 
 * Runs hourly via cron job
 */

import { Env } from './types';

interface ExtendedMarket {
  name: string;
  assetName: string;
  status: string;
}

interface ExtendedFundingRate {
  m: string;      // market name (e.g. "BTC-USD")
  f: string;      // funding rate as string
  T: number;      // timestamp in milliseconds
}

