/**
 * Fetch all active markets from Extended API
 */
async function fetchActiveMarkets(): Promise<ExtendedMarket[]> {
  try {
    const response = await fetch('https://api.starknet.extended.exchange/api/v1/info/markets');
    
    if (!response.ok) {
      throw new Error(`Markets API error: ${response.status}`);
    }

    const data = await response.json();
    
    if (!data.data || !Array.isArray(data.data)) {
      throw new Error('Invalid markets API response');
    }

    // Filter for active markets only
    const activeMarkets = data.data
      .filter((market: any) => market.status === 'ACTIVE')
      .map((market: any) => ({
        name: market.name,
        assetName: market.assetName,
        status: market.status
      }));

    return activeMarkets;
  } catch (error) {
    console.error('[V2 Extended] Failed to fetch markets:', error);
    // Fallback to known tokens if API fails
    return [
      { name: 'BTC-USD', assetName: 'BTC', status: 'ACTIVE' },
      { name: 'ETH-USD', assetName: 'ETH', status: 'ACTIVE' },
      { name: 'SOL-USD', assetName: 'SOL', status: 'ACTIVE' },
      { name: 'STRK-USD', assetName: 'STRK', status: 'ACTIVE' }
    ];
  }
}

/**
 * Update market metadata
 */
async function updateMarketMetadata(env: Env, markets: ExtendedMarket[]): Promise<void> {
  const now = Math.floor(Date.now() / 1000);
  
  const statements = markets.map(market => {
    return env.DB_WRITE.prepare(`
      INSERT OR REPLACE INTO extended_markets (symbol, base_asset, quote_asset, status, last_updated)
      VALUES (?, ?, ?, ?, ?)
    `).bind(market.name, market.assetName, 'USD', 'active', now);
  });

  await env.DB_WRITE.batch(statements);
  console.log(`[V2 Extended] Updated ${markets.length} markets`);
}

/**
 * Collect funding data for a single market
 */
async function collectMarketData(
  env: Env,
  market: ExtendedMarket,
  startTime: number,
  endTime: number
): Promise<number> {
  try {
    // Fetch funding history via proxy
    const apiUrl = `https://api.starknet.extended.exchange/api/v1/info/${market.name}/funding?startTime=${startTime}&endTime=${endTime}`;
    const proxyUrl = `https://extended.wirewaving.workers.dev/?url=${encodeURIComponent(apiUrl)}`;
    
    const response = await fetch(proxyUrl);

    if (!response.ok) {
      throw new Error(`API error: ${response.status}`);
    }

    const data = await response.json();
    
    // Handle both direct array and wrapped response
    let fundingRates: ExtendedFundingRate[] = [];
    if (Array.isArray(data)) {
      fundingRates = data;
    } else if (data.data && Array.isArray(data.data)) {
      fundingRates = data.data;
    }

    if (fundingRates.length === 0) {
      return 0;
    }

    const collectedAt = Math.floor(Date.now() / 1000);
    const statements = fundingRates.map(funding => {
      // Extended API format: {m: "BTC-USD", f: "0.000013", T: 1770202800}
      const rate = parseFloat(funding.f);
      const ratePercent = rate * 100;
      const rateAnnual = rate * 24 * 365 * 100;  // APR in percent

      return env.DB_WRITE.prepare(`
        INSERT OR REPLACE INTO extended_raw_data (
          symbol, base_asset, timestamp,
          rate, rate_percent, rate_annual,
          collected_at, source
        ) VALUES (?, ?, ?, ?, ?, ?, ?, ?)
      `).bind(
        market.name,
        market.assetName,
        funding.T,
        rate,
        ratePercent,
        rateAnnual,
        collectedAt,
        'api'
      );
    });

    await env.DB_WRITE.batch(statements);

    console.log(`[V2 Extended] ${market.name}: ${fundingRates.length} records`);
    return fundingRates.length;

  } catch (error) {
    console.error(`[V2 Extended] Error collecting ${market.name}:`, error);
    return 0;
  }
}

/**
 * Update tracker status
 */
async function updateTrackerStatus(
  env: Env,
  status: 'idle' | 'running' | 'error',
  error: string | null
): Promise<void> {
  const now = Math.floor(Date.now() / 1000);
  
  if (status === 'idle' || status === 'running') {
    await env.DB_WRITE.prepare(`
      UPDATE extended_tracker_status 
      SET status = ?, last_run = ?, last_success = ?, last_error = NULL
      WHERE id = 1
    `).bind(status, now, now).run();
  } else {
    await env.DB_WRITE.prepare(`
      UPDATE extended_tracker_status 
      SET status = ?, last_run = ?, last_error = ?
      WHERE id = 1
    `).bind(status, now, error).run();
  }
}

/**
 * Increment tracker statistics
 */
async function incrementTrackerStats(env: Env, recordCount: number): Promise<void> {
  await env.DB_WRITE.prepare(`
    UPDATE extended_tracker_status 
    SET total_runs = total_runs + 1, total_records = total_records + ?
    WHERE id = 1
  `).bind(recordCount).run();
}
