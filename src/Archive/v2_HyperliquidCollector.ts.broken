/**
 * V2 Hyperliquid Data Collector
 * 
 * Standalone data collection for Hyperliquid funding rates
 * Features:
 * - 1-hour intervals
 * - Stores raw rate, rate as percent, and APR
 * - Isolated table (hyperliquid_raw_data)
 * 
 * Runs hourly via cron job
 */

import { Env } from './types';

interface HyperliquidMeta {
  universe: Array<{
    name: string;
    szDecimals: number;
    isDelisted?: boolean;
  }>;
}

interface HyperliquidFundingRate {
  time: number;
  fundingRate: string;
}

