/**
 * Fetch all active coins from Hyperliquid API
 */
async function fetchActiveCoins(): Promise<string[]> {
  try {
    const response = await fetch('https://api.hyperliquid.xyz/info', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ type: 'meta' })
    });
    
    if (!response.ok) {
      throw new Error(`Meta API error: ${response.status}`);
    }

    const data = await response.json() as HyperliquidMeta;
    
    if (!data.universe || !Array.isArray(data.universe)) {
      throw new Error('Invalid meta API response');
    }

    // Extract coin names, excluding delisted coins
    const coins = data.universe
      .filter(item => !item.isDelisted)
      .map(item => item.name);
    return coins;
  } catch (error) {
    console.error('[V2 Hyperliquid] Failed to fetch coins:', error);
    // Fallback to known coins if API fails
    return ['BTC', 'ETH', 'SOL', 'ARB'];
  }
}

/**
 * Update market metadata
 */
async function updateMarketMetadata(env: Env, coins: string[]): Promise<void> {
  const now = Math.floor(Date.now() / 1000);
  
  const statements = coins.map(coin => {
    return env.DB_WRITE.prepare(`
      INSERT OR REPLACE INTO hyperliquid_markets (symbol, status, last_updated)
      VALUES (?, ?, ?)
    `).bind(coin, 'active', now);
  });

  await env.DB_WRITE.batch(statements);
  console.log(`[V2 Hyperliquid] Updated ${coins.length} markets`);
}

/**
 * Collect funding data for a single coin
 */
async function collectCoinData(
  env: Env,
  coin: string,
  startTime: number,
  endTime: number
): Promise<number> {
  try {
    const response = await fetch('https://api.hyperliquid.xyz/info', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        type: 'fundingHistory',
        coin: coin,
        startTime: startTime,
        endTime: endTime
      })
    });

    if (!response.ok) {
      throw new Error(`API error: ${response.status}`);
    }

    const data = await response.json();
    
    if (!Array.isArray(data) || data.length === 0) {
      return 0;
    }

    const fundingRates = data as HyperliquidFundingRate[];
    const collectedAt = Math.floor(Date.now() / 1000);
    
    const statements = fundingRates.map(funding => {
      const rate = parseFloat(funding.fundingRate);
      const ratePercent = rate * 100;
      const rateAnnual = rate * 24 * 365 * 100;  // APR in percent

      return env.DB_WRITE.prepare(`
        INSERT OR REPLACE INTO hyperliquid_raw_data (
          symbol, timestamp,
          rate, rate_percent, rate_annual,
          collected_at, source
        ) VALUES (?, ?, ?, ?, ?, ?, ?)
      `).bind(
        coin,
        funding.time,
        rate,
        ratePercent,
        rateAnnual,
        collectedAt,
        'api'
      );
    });

    await env.DB_WRITE.batch(statements);

    console.log(`[V2 Hyperliquid] ${coin}: ${fundingRates.length} records`);
    return fundingRates.length;

  } catch (error) {
    console.error(`[V2 Hyperliquid] Error collecting ${coin}:`, error);
    return 0;
  }
}

/**
 * Update tracker status
 */
async function updateTrackerStatus(
  env: Env,
  status: 'idle' | 'running' | 'error',
  error: string | null
): Promise<void> {
  const now = Math.floor(Date.now() / 1000);
  
  if (status === 'idle' || status === 'running') {
    await env.DB_WRITE.prepare(`
      UPDATE hyperliquid_tracker_status 
      SET status = ?, last_run = ?, last_success = ?, last_error = NULL
      WHERE id = 1
    `).bind(status, now, now).run();
  } else {
    await env.DB_WRITE.prepare(`
      UPDATE hyperliquid_tracker_status 
      SET status = ?, last_run = ?, last_error = ?
      WHERE id = 1
    `).bind(status, now, error).run();
  }
}

/**
 * Increment tracker statistics
 */
async function incrementTrackerStats(env: Env, recordCount: number): Promise<void> {
  await env.DB_WRITE.prepare(`
    UPDATE hyperliquid_tracker_status 
    SET total_runs = total_runs + 1, total_records = total_records + ?
    WHERE id = 1
  `).bind(recordCount).run();
}
